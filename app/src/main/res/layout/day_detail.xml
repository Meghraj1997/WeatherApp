<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:text="Webnesday"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/minTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min" />

            <TextView
                android:id="@+id/minTempEdtTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24C"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/maxTempEdtTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max" />

            <TextView
                android:id="@+id/maxTempEdttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29C"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/cloudyPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloudy" />

            <TextView
                android:id="@+id/cloudyEditPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26%"
                android:textSize="30dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wind" />

            <TextView
                android:id="@+id/windEdtTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22h/km"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date" />

            <TextView
                android:id="@+id/dateEdtTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/09/10"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/humidity"
                android:text="Humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/humidityEdtTxt"
                android:text="22h/km"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>